# Core backend
NODE_ENV=development
PORT=4000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/print_form
FRONTEND_URL=http://localhost:5173
JWT_SECRET=replace-with-at-least-32-characters
JWT_REFRESH_SECRET=replace-with-at-least-32-characters
OTP_HASH_PEPPER=replace-with-at-least-32-characters

# SMS provider (console|twilio)
SMS_PROVIDER=console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=

# Yandex Delivery B2B
# TEST -> https://b2b.taxi.tst.yandex.net
# PROD -> https://b2b-authproxy.taxi.yandex.net
YANDEX_DELIVERY_MODE=TEST
YANDEX_DELIVERY_TOKEN=replace-with-yandex-b2b-bearer-token
# Optional override host. Keep empty to use mode-based default.
YANDEX_DELIVERY_HOST=

# Optional integrations
TURNSTILE_SECRET_KEY=
GOOGLE_SHEETS_ID=
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=
